# ~~~~~~~~~~~~~~~~~ RECIPES ~~~~~~~~~~~~~~~~~

.SILENT: create-mdai
.PHONY: create-mdai
create-mdai:
	@echo "ğŸ Create MDAI Engine started..."
	@time $(MAKE) -f ./make/Makefile-local-install install-all
	@echo "ğŸ™ Create MDAI Engine completed successfully!"

.SILENT: install-mdai
.PHONY: install-mdai
install-mdai:
	@echo "ğŸ Installing MDAI Engine started..."
	@time $(MAKE) -f ./make/Makefile-local-install install-mdai
	@echo "ğŸ™ Installing MDAI Engine completed successfully!"

.SILENT: delete-mdai
.PHONY: delete-mdai
delete-mdai:
	@echo "ğŸ™ Destroy MDAI Engine started..."
	@$(MAKE) -f ./make/Makefile-local-uninstall uninstall-all
	@echo "ğŸª¦ Destroy MDAI Engine completed successfully!"

.SILENT: uninstall-mdai
.PHONY: uninstall-mdai
uninstall-mdai:
	@echo "ğŸ™ Uninstalling MDAI Engine started..."
	@$(MAKE) -f ./make/Makefile-local-uninstall uninstall-mdai
	@echo "ğŸª¦ Uninstalling MDAI Engine completed successfully!"

.SILENT: create-mdai-semi-auto
.PHONY: create-mdai-semi-auto
create-mdai-semi-auto:
	@echo "ğŸ Create MDAI Engine: Semi-auto started..."
	@time $(MAKE) -f ./make/Makefile-local-install install-all-semi-auto
	@echo "ğŸ™ Create MDAI Engine: Semi-auto completed successfully!"

.SILENT: delete-mdai-all
.PHONY: delete-mdai-all
delete-mdai-all:
	@echo "ğŸ™ Destroy MDAI Engine started..."
	@$(MAKE) -f ./make/Makefile-local-uninstall uninstall-all-artifacts
	@echo "ğŸª¦ Destroy MDAI Engine completed successfully!"

.SILENT: update-mdai-collector
.PHONY: update-mdai-collector
update-mdai-collector:
	@echo "ğŸ™ Update started"
	kubectl apply -f ./lib/mdai-operator.yaml
	@echo "ğŸ™ Update done"
